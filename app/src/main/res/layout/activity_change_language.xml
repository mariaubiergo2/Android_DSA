<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_back_dif"
    tools:context=".activities.ChangeLanguageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/change_language_spanish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:fontFamily="@font/play_regular"
            android:onClick="changeSpanish"
            android:text="@string/spanish"
            android:textColor="@color/green_vibrant"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textOpeningGadgets" />

        <Button
            android:id="@+id/change_language_catalan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:fontFamily="@font/play_regular"
            android:onClick="changeCatalan"
            android:text="@string/catalan"
            android:textColor="@color/green_vibrant"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textOpeningGadgets" />

        <Button
            android:id="@+id/change_language_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:fontFamily="@font/play_regular"
            android:onClick="changeEnglish"
            android:text="@string/english"
            android:textColor="@color/green_vibrant"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textOpeningGadgets" />

        <Button
            android:id="@+id/returnBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:fontFamily="@font/play_regular"
            android:onClick="return_toProfile"
            android:text="Return"
            android:textColor="@color/green_vibrant"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textOpeningGadgets" />

    </LinearLayout>
</RelativeLayout>
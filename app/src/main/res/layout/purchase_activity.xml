<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_back_dif">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/purchase_of"
            android:textColor="@color/green_vibrant"
            android:fontFamily="@font/play_bold"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_marginTop="70dp">
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:inputType="text"
            android:textStyle="bold"
            android:textColor="@color/green_vibrant"
            android:fontFamily="@font/play_bold"
            android:textSize="40sp"
            android:textAlignment="center"
            android:id="@+id/title_profile_gadget"
            android:text="@string/updating_title_gadget"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:cardMaxElevation="5dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardview_back"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/identifier_purchase"
                    android:fontFamily="@font/play_regular"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:lines="1"
                    android:textColor="@color/green_vibrant"
                    android:textSize="17sp">
                </TextView>

                <EditText
                    android:id="@+id/id_gadget"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/play_regular"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:text="@string/updating_identifier"
                    android:textAlignment="center"
                    android:textColor="@color/green_vibrant"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_purchase"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:textColor="@color/green_vibrant"
                    android:fontFamily="@font/play_regular"
                    android:lines="1"
                    android:textSize="17sp">
                </TextView>

                <EditText
                    android:id="@+id/description_gadget"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/play_regular"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:text="@string/updating_description"
                    android:textAlignment="center"
                    android:textColor="@color/green_vibrant"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cost_purchase"
                    android:textColor="@color/green_vibrant"
                    android:fontFamily="@font/play_regular"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:lines="1"
                    android:textSize="17sp">
                </TextView>

                <EditText
                    android:id="@+id/cost_Gadget"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/play_regular"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:text="@string/updating_cost"
                    android:textAlignment="center"
                    android:textColor="@color/green_vibrant"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <Button
        android:id="@+id/returnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="680dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:fontFamily="@font/play_regular"
        android:onClick="goBackToGadgetActivity"
        android:text="â†"
        android:textColor="@color/green_vibrant"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp" />
    <TextView
        android:id="@+id/question_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/play_regular"
        android:lines="1"
        android:text="@string/are_you_sure_you_want_to_buy_the_gadget"
        android:textAlignment="center"
        android:textColor="@color/green_vibrant"
        android:textSize="17sp"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/purchaseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_purchase"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="161dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:fontFamily="@font/play_regular"
        android:onClick="buyGadget"
        android:text="@string/buy"
        android:textColor="@color/green_vibrant"
        android:textSize="25sp"
        android:textStyle="bold" />



</RelativeLayout>